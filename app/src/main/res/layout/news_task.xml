<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/economics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/vertical_guide"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:id="@+id/cars"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/economics"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cars"
                android:textSize="22sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/colorWhite"
                android:background="@color/purple"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/cars"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/cars"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/economics"
            app:layout_constraintEnd_toStartOf="@id/vertical_guide"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cars"
            android:textSize="22sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorWhite"
            android:background="@color/purple"
            app:layout_constraintBottom_toBottomOf="@+id/carImage"
            app:layout_constraintEnd_toEndOf="@id/carImage"
            />
        <android.support.constraint.Guideline
            android:id="@+id/vertical_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
